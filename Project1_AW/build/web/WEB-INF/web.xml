<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>processAddProduct</servlet-name>
        <servlet-class>servletClasses.ProcessAddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processAddFeedback</servlet-name>
        <servlet-class>servletClasses.ProcessAddFeedback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processBrowseAppliance</servlet-name>
        <servlet-class>servletClasses.ProcessBrowseAppliance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessRegister</servlet-name>
        <servlet-class>servletClasses.ProcessRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogin</servlet-name>
        <servlet-class>servletClasses.ProcessLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>processAddProduct</servlet-name>
        <url-pattern>/add-product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processAddFeedback</servlet-name>
        <url-pattern>/add-feedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processBrowseAppliance</servlet-name>
        <url-pattern>/browse-appliance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
